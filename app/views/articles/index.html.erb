<h1>Listing articles</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th colspan="2"></th>
	</tr>
	
	<% @articles.each do |article| %>
		<tr>
			<td><%= article.title %></td>
			<td><%= truncate(strip_tags(article.text), length: 20) %></td>
			<td><%= link_to 'Show', article_path(article) %></td>
		</tr>
	<% end %>
</table>
<%= render 'search_box' %>
