<%= render 'partials/search_box', search: '' %>

<% cache(cache_key_for_articles) do %>
  <%= render 'partials/results', articles: @articles %>
<% end %>

<article class="center-align">
  <% if @page_number > 1 %>
    <strong>
      <%= link_to "← Newer Posts", "/archives/#{(@page_number - 1)}" %>
    </strong>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <% end %>
  
  <% if @page_number < @number_of_pages %>
    <strong>
      <%= link_to "Older Posts →", "/archives/#{(@page_number + 1)}" %>
    </strong>
  <% end %>
</article>

<%= render 'partials/selected_nav', selected: 'archives' %>